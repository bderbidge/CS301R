<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270"
                android:endColor="@color/buttonBorder" android:startColor="@color/buttonBorder" />
            <corners android:topRightRadius="2dp" android:bottomRightRadius="2dp" />
        </shape>
    </item>
    <item >
        <shape>
            <gradient android:angle="270"
                android:endColor="@color/buttonNormal" android:startColor="@color/buttonNormal" />
            <corners android:topRightRadius="2dp" android:bottomRightRadius="2dp" />
        </shape>
    </item>
</selector>