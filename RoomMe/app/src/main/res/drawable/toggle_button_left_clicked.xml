<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" android:color="@color/White">
        <shape>
            <gradient android:angle="270"
                android:endColor="@color/colorPrimary" android:startColor="@color/colorPrimary" />
            <corners android:topLeftRadius="2dp" android:bottomLeftRadius="2dp" />
        </shape>
    </item>
    <item android:color="@color/White">
        <shape>
            <gradient android:angle="270"
                android:endColor="@color/colorPrimaryLight" android:startColor="@color/colorPrimaryLight" />
            <corners android:topLeftRadius="2dp" android:bottomLeftRadius="2dp" />
        </shape>
    </item>
</selector>