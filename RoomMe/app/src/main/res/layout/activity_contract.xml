<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="360dp"
        android:layout_height="470dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        card_view:cardBackgroundColor="@color/White"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="498dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/text_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/ic_text"
                android:layout_alignTop="@+id/caller"
                android:layout_marginLeft="190dp"/>

            <ImageView
                android:id="@+id/caller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/ic_action_phone"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="270dp"/>

            <ImageView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/ic_action_name"
                android:layout_marginStart="127dp"
                android:layout_marginTop="270dp"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cityState"
                android:layout_marginTop="27dp"
                android:src="@drawable/theriv" />

            <ImageView
                android:id="@+id/favoriteHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="253dp"
                android:layout_marginTop="270dp"
                />

            <TextView
                android:id="@+id/costOfRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/apartmentName"
                android:layout_alignBottom="@+id/apartmentName"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:text="$400/Month"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/apartmentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:text="Centenial 2"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/cityState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/genderRoomType"
                android:layout_alignBottom="@+id/genderRoomType"
                android:layout_alignEnd="@+id/costOfRent"
                android:text="Provo UT"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/genderRoomType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/apartmentName"
                android:layout_below="@+id/apartmentName"
                android:layout_marginTop="9dp"
                android:text="Men's Single"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/sellerName"
                android:layout_below="@+id/sellerName"
                android:text="Contract Available:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:text="1000 E 450 N #1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sellerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/notes"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="50dp"
                android:text="Brandon Derbidge"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sellBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/23/17"
                android:textColor="@color/black"
                android:layout_marginTop="322dp"
                android:layout_marginLeft="165dp" />

            <TextView
                android:id="@+id/notes"
                android:layout_width="270dp"
                android:layout_height="100dp"
                android:text="Notes"
                android:textColor="@color/black"
                android:layout_below="@+id/address"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>